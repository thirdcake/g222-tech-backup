{% extends './partials/base.html.twig' %}

{% block main %}
{%- include 'partials/breadcrumb.html.twig' -%}
{% if page.eyecatch.src %}
<aside class="eyecatch" style="background-image: url({{ page.eyecatch.src }});">
    <details>
        <summary>ALT</summary>
        <div>{{ page.eyecatch.alt }}</div>
    </details>
</aside>
{% endif %}
{{ parent() }}
<aside class="blog-pager"><p>次のブログ記事</p></aside>
{%- include 'partials/relations.html.twig' -%}
{% endblock %}

{% block aftertitle %}
<p class="page-date">
    <span>作成日: {{ page.create_at|date("Y年m月d日") }}</span>
    {% if page.update_at %}
    <span>更新日: {{ page.update_at|date("Y年m月d日") }}</span>
    {% endif %}
</p>
{% endblock %}